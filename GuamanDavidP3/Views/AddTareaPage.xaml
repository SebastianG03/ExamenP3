<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuamanDavidP3.Views.AddTareaPage"
             Title="AddTarea">
    <VerticalStackLayout>
        <TableView >
            <TableRoot>
                <TableSection Title="Crea una tarea">
                    <EntryCell x:Name="Nombre"
                               Placeholder="Nombre"/>
                    <EntryCell x:Name="Estado"
                               Placeholder="Estado"/>
                    <EntryCell x:Name="Descripcion"
                               Placeholder="Descripcion"/>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Guardar"
                FontSize="15"
                Margin="5"
                Clicked="OnClickedGuardarTarea"/>
    </VerticalStackLayout>
</ContentPage>